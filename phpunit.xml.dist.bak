<?xml version="1.0" encoding="utf-8" ?>
<phpunit bootstrap="./vendor/autoload.php">
    <testsuites>
        <testsuite name="My Project - TestSuite">
            <directory>./tests</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory suffix=".php">app/classes/endpoints</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-html" target="app/report/" lowUpperBound="35"
             highLowerBound="70"/>
    </logging>
</phpunit>